@model MyStore.Models.ViewModels.OrderHistoryVM
@using System.Globalization

<form method="post">
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container row">
            <div class="col -8">
                <div class="card mt-4">
                    <div class="card-header bg-dark text-light ml-0 row container">
                        <div class="col-6">
                            <i class="fa fa-shopping-cart"></i> &nbsp;
                            Order History
                        </div>
                    </div>
                    <div class="card-body">
                        <div class=" d-none d-lg-block">
                            <div class="row text-center" style="color:#821f3d">
                                <div class="col-md-2">
                                    Order Time
                                </div>
                                <div class="col-10 col-lg-7">
                                    Product Details
                                </div>
                                <div class="col-12 col-lg-2">
                                    Price
                                </div>
                                <div class="col-6 col-sm-4 col-lg-1">
                                </div>
                            </div>
                        </div>
                        <hr />
                        @if (Model.ProductDateTimePairList.Count() > 0)
                        {
                            @foreach (var product in Model.ProductDateTimePairList)
                            {
                                <div class="row h-100">
                                    <div class="col-5 col-sm-2 p-0 text-center mr-1">
                                        @product.Value.ToString("F", new CultureInfo("en-GB"))
                                    </div>
                                    <div class="col-4 col-sm-2 text-center py-1">
                                        <img src="@WebConstants.ImagePath@product.Key.Image" class="rounded" width="100%" />
                                    </div>
                                    <div class="col-8 col-md-5">
                                        <h5>@product.Key.Name</h5>
                                        <div style="font-size:13px;">@product.Key.ShortDescript</div>
                                    </div>
                                    <div class="col-3 col-sm pt-lg-4" style="font-size:11px;">
                                        <span style="font-size:17px;">@product.Key.Price.ToString("C0", new CultureInfo("uk-UA"))</span>
                                    </div>
                                </div>
                            <hr />
                            }
                        }
                        else
                        {
                            <h2 class="text-center">Oooops... You haven't ordered any product yet :)</h2>
                        }
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-6 col-md-3 offset-md-9">
                                <div class="col-6 text-right">
                                    <a asp-action="Index" asp-controller="Home" class="btn btn-info btn-sm">Go to Products</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>