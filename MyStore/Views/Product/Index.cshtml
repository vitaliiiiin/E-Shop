@model IEnumerable<MyStore.Models.Product>
@using System.Globalization

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary">
                Create new Product
            </a>
        </div>
    </div>

    <br />
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-border table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Manufacturer
                    </th>
                    <th class="text-center">
                        Manage
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td width="25%">@product.Name</td>
                        <td width="15%">@product.Price.ToString("C0", new CultureInfo("uk-UA"))</td>
                        <td width="30%">@product.Category.Name</td>
                        <td width="30%">@product.Manufacturer.Name</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-route-Id="@product.Id" asp-action="Upsert" class="btn btn-primary mx-2">
                                    Edit
                                </a>
                                <a asp-route-Id="@product.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No product exists.</p>
    }
</div>